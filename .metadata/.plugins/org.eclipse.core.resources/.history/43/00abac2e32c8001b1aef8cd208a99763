package Exercise5;

import java.util.Scanner;

public class Input_from_console {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
Scanner sn = new Scanner(System.in);
System.out.println("Moi ban nhap vao 3 so nguyen");
System.out.println("Moi ban nhap vao so nguyen thu 1");
int a0 = sn.nextInt();
System.out.println("Moi ban nhap vao so nguyen thu 2");
int a1 = sn.nextInt();
System.out.println("Moi ban nhap vao so nguyen thu 3");
int a2 = sn.nextInt();
System.out.println("Ban vua nhap vao 3 so Nguyen " + a0  + " " + a1 + " " + " " + a2);
	}

}
